<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="001" author="developer">
        <createTable tableName="file_metadata">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="original_file_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_path" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content_type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="file_size" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="upload_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="md5_hash" type="varchar(32)"/>
        </createTable>
        
        <createIndex indexName="idx_file_metadata_file_name" tableName="file_metadata">
            <column name="file_name"/>
        </createIndex>
        
        <createIndex indexName="idx_file_metadata_md5_hash" tableName="file_metadata">
            <column name="md5_hash"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
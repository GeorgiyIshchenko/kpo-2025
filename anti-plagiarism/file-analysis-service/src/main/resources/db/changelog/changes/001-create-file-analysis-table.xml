<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="001" author="developer">
        <createTable tableName="file_analysis">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="paragraph_count" type="int"/>
            <column name="word_count" type="int"/>
            <column name="character_count" type="int"/>
            <column name="is_plagiarism" type="boolean"/>
            <column name="similar_file_id" type="bigint"/>
            <column name="analysis_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="word_cloud_url" type="varchar(255)"/>
        </createTable>
        
        <createIndex indexName="idx_file_analysis_file_id" tableName="file_analysis">
            <column name="file_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>